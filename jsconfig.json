{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "jsx": "preserve",
        "strict": false
    },
    "include": [
        "next-env.d.ts",
        "**/*.js",
        "**/*.jsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}